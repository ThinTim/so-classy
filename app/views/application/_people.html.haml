%ul.media-list
  -people.each do |person|
    %li.media
      .media-left
        =image_tag(gravatar_url(person.email), alt: (person.name or person.email), width: '50px', height: '50px')
      .media-body
        %h4.media-heading= (person.name or person.email)
        %p= (person.email if person.name)

