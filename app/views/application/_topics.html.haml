- if @topics.empty?
  %p.text-muted No topics to display
- else
  - topics.each do |topic|
    .row
      .col-xs-12
        .pull-right
          %span.label{class: (topic.teachers.include? current_user) ? 'label-success' : 'label-default' }= pluralize(topic.teachers.size, 'Teacher')
          %span.label{class: (topic.students.include? current_user) ? 'label-success' : 'label-default' }= pluralize(topic.students.size, 'Student')

        %span.h4
          %a{href: topic_path(topic)}=topic.name
          %small
            -if topic.owner
              by
              %a.hidden-link{href: user_path(topic.owner)}= topic.owner.display_name
        %hr