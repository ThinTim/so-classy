- if current_user and not current_user.name
  .alert.alert-warning.text-center
    .strong You haven't set your name!
    
    = form_for current_user, url: user_path(current_user), html: { method: "patch", class: 'form-inline' } do |form|
      .form-group
        = form.label(:name, 'My name is')
        = form.text_field(:name, class: 'form-control')
      %button.btn.btn-default{type: 'submit'} Update