.topics
  .row
    .col-xs-12
      %a.btn.btn-default{ href: topics_path } Back to topics


  %h1 Create a Topic

  =form_for :topic, url: topics_path do |form|
    .form-group
      = form.label(:name, class: 'control-label')
      = form.text_field(:name, class: 'form-control')
    .form-group
      = form.label(:description, 'Description (optional)', class: 'control-label')
      = form.text_area(:description, class: 'form-control')
    .form-group
      %button.btn.btn-default{type: 'submit'} Save