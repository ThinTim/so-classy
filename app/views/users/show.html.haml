.users
  .row
    .col-xs-12
      .pull-right
        -if current_user? @user
          = link_to 'Edit', edit_user_path(@user), class: 'btn btn-default'
      %a.btn.btn-default{ href: topics_path } Back to topics

  .row
    .col-xs-12
      %h1
        .pull-left
          .thumbnail
            =gravatar_for(@user, size=50)
        
        -# Not the best approach, but it works
        &nbsp;

        = @user.name
        %small
          = surround '(', ')' do
            %a{href: "mailto:#{@user.email}"}= @user.email

  .row
    .col-xs-12
      -if current_user? @user
        %p 
          Can't see your avatar? Create one at 
          %a{href: 'http://www.gravatar.com'} gravatar.com!