.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Email
        %th Face
    %tbody.text-left
      - people.each do |person|
        %tr
          %td= person.name
          %td= person.email
          %td
            =image_tag(gravatar_url(person.email), alt: person.name)